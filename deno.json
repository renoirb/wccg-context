{
  "name": "@renoirb/wccg-context",
  "version": "0.1.3",
  "description": "Minimal implementation of the W3C Web Components Community Group Context Protocol with functional late resolution support",
  "license": "BSD-3-Clause",
  "exports": {
    ".": "./browser.ts"
  },
  "tasks": {
    "lint": "deno lint",
    "fmt": "deno fmt",
    "publish": "deno publish"
  },
  "publish": {
    "include": [
      "browser.ts",
      "deno.json",
      "LICENSE",
      "README.md",
      "src/"
    ]
  },
  "compilerOptions": {
    "lib": [
      "DOM.Iterable",
      "DOM",
      "ES2022"
    ],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "lock": false
}
